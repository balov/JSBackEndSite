<main>
    <h1 class="head-title">Welcome to ShopStop!</h1>
    
    <form id="search-form">
      <input type="text" name="query" placeholder="Search...">
      <input type="submit" value="Search">
    </form>

    <div class="cards">
      {{#each products}}
      <div class="product-card">
            <img class="product-img" src="{{image}}">
            <h2>{{name}}</h2>
          <p>{{description}}</p>
          <a href="/product/buy/{{_id}}" class="btn btn-small btn-success">Buy</a>
          <a href="/product/edit/{{_id}}" class="btn btn-small btn-warning">Edit</a>
          <a href="/product/delete/{{_id}}" class="btn btn-small btn-danger">Delete</a>
          <a href="/category/{{category.name}}/products" class="btn btn-small btn-primary">More {{category.name}}</a>
      </div>
      {{/each}}
    </div>
</main>

