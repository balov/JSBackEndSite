<main>
    <form class="form center-form" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Name</label>
        <input id="name" name="name" type="text" value="{{product.name}}" class="input-field" />
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" type="text" placeholder="{{product.description}}"
          class="input-field"></textarea>
      </div>

      <div class="form-group">
        <label for="price">Price</label>
        <input id="price" name="price" type="number" step="0.01" value="{{product.price}}"
          class="input-field" />
      </div>

      <div class="form-group">
        <label for="image">Image</label>
        <input id="image" name="image" type="file" accept="image/*" class="input-field" />
      </div>

      <div class="form-group">
        <label for="group">Group</label>
        <select class="input-field" name="category">
        {{#each categories}}
          <option value="{{_id}}">{{name}}</option>
        {{/each}}
        </select>
      </div>

      <div class="form-group">
        <input class="btn btn-warning form-btn" type="submit" value="Edit">
      </div>
    </form>
</main>